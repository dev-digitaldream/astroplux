---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { BLOG } from "@consts";

// Charger le contenu de présentation (même logique que sur la home)
let homeContent: { Content: any; data: any } | null = null;
try {
  const homePages = await getCollection("pages");
  const homePage = homePages.find(p => p.slug === "grav/home");
  if (homePage) {
    const { Content } = await homePage.render();
    homeContent = { Content, data: homePage.data };
  }
} catch (e) {
  // Fallback si pas de page home Grav
}

const allPosts = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Limiter la home du blog aux 5 derniers articles
const latestPosts = allPosts.slice(0, 5);
  
type Acc = {
  [year: string]: CollectionEntry<"blog">[];
}

const posts = latestPosts.reduce((acc: Acc, post) => {
    const year = post.data.date.getFullYear().toString();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  }, {});

const years = Object.keys(posts).sort((a, b) => parseInt(b) - parseInt(a)); 

// Meilleurs articles (optionnel) : utiliser un tag "best" ou "top" dans vos posts
const bestPosts = allPosts
  .filter(post => Array.isArray(post.data.tags) && (post.data.tags.includes("best") || post.data.tags.includes("top")))
  .slice(0, 3);

---

<PageLayout title={BLOG.TITLE} description={BLOG.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">
        Blog
      </div>
      <div class="space-y-4">
        {years.map(year => (
          <section class="animate space-y-4">
            <div class="font-semibold text-black dark:text-white">
              {year}
            </div>
            <div>
              <ul class="flex flex-col gap-4">
                {
                  posts[year].map((post) => (
                    <li>
                      <ArrowCard entry={post}/>
                    </li>
                  ))
                }
              </ul>
            </div>
          </section>
        ))}
      </div>

      {bestPosts.length > 0 && (
        <section class="animate space-y-4">
          <div class="font-semibold text-black dark:text-white">
            Meilleurs articles
          </div>
          <div>
            <ul class="flex flex-col gap-4">
              {bestPosts.map((post) => (
                <li>
                  <ArrowCard entry={post} />
                </li>
              ))}
            </ul>
          </div>
        </section>
      )}

      <section class="animate">
        <article class="space-y-4">
          {homeContent ? (
            <homeContent.Content />
          ) : (
            <>
              <p class="animate">
                I am a minimal, seo friendly, accessible portfolio and blog for developers. 
                I am an even more lightweight version of my popular theme
                <Link href="https://github.com/markhorn-dev/astro-sphere" aria-label="Astro Sphere on Github" external>
                  Astro Sphere
                </Link>.
                I have a lighthouse scores of 100 across the board for performance, 
                accesibility, best practices and SEO.
              </p>
              <p class="animate">
                I come packed with full type safety, a sitemap, an rss feed, markdown 
                and mdx support (use components in your markdown) through astro integrations.
                I am styled with tailwind and come preconfigured with light, dark and 
                system/os theme preferences out of the box.
              </p>
              <p class="animate">
                Visit
                <Link href="https://github.com/markhorn-dev/astro-nano" aria-label="Astro Nano on Github" external>
                  Astro Nano on Github
                </Link>
                to fork the repository, read the docs or one-click deploy on Vercel or Netlify. 
              </p>
            </>
          )}
        </article>
      </section>
    </div>
  </Container>
</PageLayout>
